/global/movelog/*.log /global/movelog/*/*.log /global/movelog/*/*/*.log {
    su root root
    daily
    rotate 7
    maxage 14
    missingok
    notifempty
    compress
    delaycompress
    copytruncate
    dateext
    dateformat -%Y%m%d
    sharedscripts
    olddir /global/oldlogs
    postrotate
        TS="$(date -u +'%Y-%m-%dT%H:%M:%SZ' 2>/dev/null || date)"
        MSG="[logrotate] rotated /global/movelog -> /global/oldlogs (daily) at ${TS}"
        [ -w /proc/1/fd/1 ] && printf '%s\n' "$MSG" > /proc/1/fd/1 || true
    endscript
}
